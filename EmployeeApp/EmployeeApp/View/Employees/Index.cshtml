@page
@model EmployeeApp.View.Employees.IndexModel
@{
    ViewData["Title"] = "Employee List";
}

<h1>Employee List</h1>

<p>
    <a asp-page="Add" class="btn btn-primary">Add New Employee</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>NIK</th>
            <th>Full Name</th>
            <th>Gender</th>
            <th>Date of Birth</th>
            <th>Address</th>
            <th>Country</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>@employee.NIK</td>
                <td>@employee.FullName</td>
                <td>@employee.Gender</td>
                <td>@employee.DateOfBirth?.ToShortDateString()</td>
                <td>@employee.Address</td>
                <td>@employee.Country</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@employee.NIK" class="btn btn-secondary">Edit</a>
                    <a asp-page="Delete" asp-route-id="@employee.NIK" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
